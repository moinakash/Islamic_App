<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">




    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"

        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">
                    <LinearLayout

                        android:gravity="left"

                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">



                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center_vertical"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginLeft="15dp"
                                android:id="@+id/idSuraName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="আল ফাতিহা"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textSize="12sp" />

                            <TextView

                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="আয়াত নং-"
                                android:textColor="@android:color/black"
                                android:textSize="12sp" />

                            <TextView

                                android:id="@+id/idAyatNumber"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="১"
                                android:textColor="@android:color/black"
                                android:textSize="12sp" />


                        </LinearLayout>



                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="7dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/idSuraShare"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/share_icon" />


                    <ImageButton
                        android:layout_marginLeft="5dp"
                        android:id="@+id/idSuraCopy"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/copy_icon" />


                    <ImageButton
                        android:layout_marginLeft="5dp"
                        android:id="@+id/idDeleteBookmark"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:background="@drawable/trash" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <TextView

                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:id="@+id/idAyatArbi"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="#000"
                        />

                    <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:background="@drawable/line_break"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"  />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">




                    <ImageView

                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/line_break"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"  />

                    <TextView

                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/idAyatBangla"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="#000"
                        />

                </LinearLayout>

                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">




                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="18dp"

                        android:background="@drawable/line_break"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"  />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="15dp"
                        android:id="@+id/idAyatBanglaMeaning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="#000"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>

