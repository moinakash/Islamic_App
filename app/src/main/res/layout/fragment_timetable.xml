                    android:textColor="#000000"
                    style="@style/NamajTimeTextBoxSize"/>

                <LinearLayout
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton

                        android:layout_gravity="center"

                        android:id="@+id/idAlarmMagrib"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/ic_baseline_add_alarm_24"
                        android:layout_marginRight="30dp"/>

                </LinearLayout>




            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"

            android:layout_marginRight="20dp"


            app:cardCornerRadius="5dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.575"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_date"
            app:layout_constraintVertical_bias="0.861">

            <LinearLayout
                android:id="@+id/idIshaStrokeBG"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:background="@drawable/time_table_gray"
                android:paddingBottom="4dp">


                <TextView
                    style="@style/NamajTimeTextBoxSize"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="30dp"
                    android:text="এশা" />

                <TextView
                    android:id="@+id/idIsha"
                    style="@style/NamajTimeTextBoxSize"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="00:00"
                    android:textColor="#000000" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="right">

                    <ImageButton

                        android:id="@+id/idAlarmEsha"

                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/ic_baseline_add_alarm_24" />

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded"
            android:elevation="16dp"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintStart_toStartOf="parent"></LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>





</RelativeLayout>