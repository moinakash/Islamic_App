<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@android:color/transparent"
   >

    <TextView

        android:layout_margin="15dp"

        android:elevation="5dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
         android:layout_alignParentRight="true"
        android:id="@+id/exit"
        />

    <androidx.cardview.widget.CardView

        app:cardCornerRadius="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView

                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tasbih_header_bg"
                android:translationY="-0dp" />

            <TextView
                android:gravity="center"
                android:id="@+id/sahari"
                android:textColor="@android:color/black"
                android:layout_below="@+id/img"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="আজকের সেহরীর শেষ সময়"
                />

            <TextView
                android:gravity="center"
                android:id="@+id/sahari_sesh_somoy"
                android:textColor="@android:color/black"
                android:layout_below="@+id/sahari"
                android:textSize="15sp"
                android:text="আজকের সেহরীর শেষ সময়"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />


            <TextView
                android:gravity="center"
                android:id="@+id/iftari"
                android:textColor="@android:color/black"
                android:layout_below="@+id/sahari_sesh_somoy"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ইফতারির সময়"
                />

            <TextView
                android:gravity="center"
                android:id="@+id/iftarir_somoy"
                android:textColor="@android:color/black"
                android:layout_below="@+id/iftari"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ইফতারির সময়"
                android:layout_marginBottom="40dp"
                />


        </LinearLayout>


    </androidx.cardview.widget.CardView>









</RelativeLayout>