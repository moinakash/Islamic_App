<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    >

    <TextView

        android:visibility="gone"
        android:layout_margin="15dp"

        android:elevation="5dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_close_24"
        android:layout_alignParentRight="true"
        android:id="@+id/exit"
        />



        <LinearLayout
            android:background="@drawable/updatebg_t"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:gravity="center">




            <ImageView
                android:layout_marginRight="5dp"
                android:background="@drawable/update_logo_t"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="15dp"/>




            <TextView

                android:layout_gravity="center"
                android:gravity="center"

                android:textColor="@android:color/white"
                android:layout_below="@+id/iftari"
                android:textSize="20sp"


                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="অ্যাপটি আপডেট করুন।"
                />


            <TextView

                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:gravity="center"

                android:textColor="@android:color/white"
                android:layout_below="@+id/iftari"
                android:textSize="12sp"



                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/UpdateTxt2"
                />

            <Button
                android:textColor="#006250"
                android:background="@drawable/update_btn"
                android:id="@+id/idUpdateBtn"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:text="আপডেট"
                android:layout_width="120dp"
                android:layout_height="30dp"/>


        </LinearLayout>










</RelativeLayout>