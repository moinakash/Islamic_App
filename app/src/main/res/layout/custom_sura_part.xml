            android:textStyle="bold"
            android:textSize="35sp"
            android:id="@+id/idSuraArbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/idSuraBangla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/idSuraBanglaMeaning"
            android:layout_width="wrap_content"
