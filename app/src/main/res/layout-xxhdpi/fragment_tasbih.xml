<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/tasbih_pattern"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="140sp"


        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"

        android:layout_marginLeft="23sp"

        android:layout_marginRight="23sp"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="1.0"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.0">

        <!--        android:background="#B0EDEDED"-->

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#f8fcfa"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="5sp">


                <androidx.cardview.widget.CardView
                    android:layout_margin="5sp"
                    app:cardCornerRadius="10sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="40sp">


                    <LinearLayout

                        android:id="@+id/idSound"
                        android:background="@drawable/green_shape"
                        android:layout_width="match_parent"
                        android:layout_height="40sp">

                        <ImageView


                            android:scaleType="centerCrop"
                            android:background="@drawable/sound_off_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </ImageView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    android:layout_margin="5sp"
                    app:cardCornerRadius="10sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="40sp">


                    <LinearLayout


                        android:id="@+id/id33"
                        android:gravity="center"
                        android:layout_gravity="center"

                        android:background="@drawable/green_shape"
                        android:layout_width="match_parent"
                        android:layout_height="40sp">


                        <ImageView


                            android:layout_gravity="center"
                            android:scaleX="1.2"
                            android:scaleY="1.2"

                            android:scaleType="centerCrop"
                            android:background="@drawable/button33"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </ImageView>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_margin="5sp"
                    app:cardCornerRadius="10sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="40sp">


                    <LinearLayout

                        android:id="@+id/idReset"
                        android:layout_weight="1"
                        android:background="@drawable/green_shape_fill"
                        android:layout_width="match_parent"
                        android:layout_height="40sp">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:background="@drawable/green_shape_fill"
                            android:gravity="center"
                            android:text="পুনরায় শুরু"
                            android:textColor="@android:color/white"
                            android:textSize="17sp"
                            android:translationY="-2sp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>




            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/idCurrentCount"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="১৭"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/idCountSet"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="৩৩"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>





            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="সর্বমোট গননাঃ "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/idtotalCount"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="১৭"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <LinearLayout

                    android:id="@+id/idttlr"
                    android:background="@drawable/tasbih_button"
                    android:layout_marginLeft="8sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="25sp"
                    android:layout_height="25sp">

                    <TextView

                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/reset"
                        android:layout_width="15sp"
                        android:layout_height="15sp"/>

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.035">

        <!--        android:background="#B0EDEDED"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#f8fcfa"
            android:gravity="center"
            android:orientation="horizontal">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="315sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_margin="20sp"
                android:background="@drawable/rope_line_two"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="20sp"
                tools:layout_editor_absoluteY="370sp">


                <ImageView
                    android:id="@+id/id_pearl"
                    style="@style/image_values"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/id_pearl_1"

                    style="@style/image_values"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/id_pearl_2"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />


                <ImageView
                    android:id="@+id/id_pearl_2"

                    style="@style/image_values"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/id_pearl"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/id_pearl_3"

                    style="@style/image_values"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/id_pearl_2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/id_pearl_4"


                    style="@style/image_values"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/id_pearl_3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/id_pearl_6"

                    style="@style/image_values"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.446"
                    app:layout_constraintStart_toEndOf="@+id/id_pearl_4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/id_pearl_7"

                    style="@style/image_values"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.63"
                    app:layout_constraintStart_toEndOf="@+id/id_pearl_4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/id_pearl_8"

                    style="@style/image_values"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.81"
                    app:layout_constraintStart_toEndOf="@+id/id_pearl_4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/id_pearl_9"

                    style="@style/image_values"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/id_pearl_8"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView


        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="180sp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tasbih_header_bg"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/idButton"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_gravity="center"
        android:layout_margin="20sp"

        android:background="@drawable/tasbih_button_img"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3"
        app:layout_constraintVertical_bias="0.488">

        <!--<ImageView

            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@drawable/tasbih"
            android:layout_width="50dp"
            android:layout_height="50dp"/>-->


    </Button>

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="65sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded"


        android:orientation="vertical"
        android:padding="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>



