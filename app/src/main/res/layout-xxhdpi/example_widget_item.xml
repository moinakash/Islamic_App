<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout

        android:id="@+id/example_widget_button"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/widget_bg"
        android:layout_width="900px"
        android:layout_height="550px">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:gravity="left"
            android:orientation="horizontal"


            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_gravity="center_vertical"
                android:layout_marginTop="1dp"
                android:background="@drawable/logo_white_widget"
                android:layout_width="40dp"
                android:layout_height="40dp"/>



        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:gravity="right"
            android:orientation="horizontal"


           android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="1dp"
                android:background="@drawable/location_white"
                android:layout_width="15dp"
                android:layout_height="15dp"/>

            <TextView
                android:padding="2dp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:text="|"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView

                android:id="@+id/example_widget_item_text6"
                android:padding="2dp"
                android:layout_gravity="center"

                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_marginTop="1dp"
                android:text="location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout

            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_marginLeft="2dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="ফজর"
                    android:textColor="@android:color/black"
                    android:textSize="40px"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"

                    />


                <TextView
                    android:id="@+id/example_widget_item_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Item"
                    android:textColor="@android:color/black"
                    android:textSize="40px"

                    android:layout_marginBottom="2dp"
                    />


            </LinearLayout>





            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_marginLeft="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="যোহর"
                    android:textColor="@android:color/black"
                    android:textSize="40px"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"

                    />


                <TextView
                    android:id="@+id/example_widget_item_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Item"
                    android:textColor="@android:color/black"
                    android:textSize="40px"

                    android:layout_marginBottom="2dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_marginLeft="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="আসর"
                    android:textColor="@android:color/black"
                    android:textSize="40px"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"

                    />


                <TextView
                    android:id="@+id/example_widget_item_text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Item"
                    android:textColor="@android:color/black"
                    android:textSize="40px"
                    android:layout_marginBottom="2dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_marginLeft="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="মাগরিব"
                    android:textColor="@android:color/black"
                    android:textSize="40px"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"

                    />


                <TextView
                    android:id="@+id/example_widget_item_text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:text="Item"
                    android:textColor="@android:color/black"

                    android:textSize="40px" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_marginLeft="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="এশা"
                    android:textColor="@android:color/black"
                    android:textSize="40px"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"

                    />


                <TextView
                    android:id="@+id/example_widget_item_text5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:text="Item"
                    android:textColor="@android:color/black"

                    android:textSize="40px" />


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>