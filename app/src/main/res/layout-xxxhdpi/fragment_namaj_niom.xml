<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quran_mazid_bg">



    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        >

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout

            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/idNamajerNiom"
                android:layout_margin="10dp"

                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout


                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    style="@style/Namaj_Niom_layout_Size_XXXhdpi"
                    android:background="@drawable/quran_button"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/Namaj_niom_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </LinearLayout>

                </LinearLayout>



                <TextView
                    android:text="নামাজের নিয়ম"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/idDoaoDurud"
                android:layout_margin="10dp"

                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:textSize="16sp"

                    android:layout_margin="5dp"

                    style="@style/Namaj_Niom_layout_Size_XXXhdpi"

                    android:background="@drawable/quran_button"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/Doa_durud"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:text="দোয়া ও দুরূদ"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/idBiseshNamaj"
                android:layout_margin="10dp"

                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:textSize="16sp"

                    android:layout_margin="5dp"
                    style="@style/Namaj_Niom_layout_Size_XXXhdpi"
                    android:background="@drawable/quran_button"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/Bishesh_namaj"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:text="বিশেষ নামাজ"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout

            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/idForojOSunnot"
                android:layout_margin="10dp"

                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:textSize="16sp"

                    android:layout_margin="5dp"
                    style="@style/Namaj_Niom_layout_Size_XXXhdpi"
                    android:background="@drawable/quran_button"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/Namajer_parthokko"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:gravity="center"
                    android:text="নামাজের পার্থক্য"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/idMonajaterNiom"
                android:layout_margin="10dp"

                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:textSize="16sp"

                    android:layout_margin="5dp"
                    style="@style/Namaj_Niom_layout_Size_XXXhdpi"
                    android:background="@drawable/quran_button"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/Monajat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="আমল\nসমূহ"
                    android:textSize="13sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/idShoriot"
                android:layout_margin="10dp"


                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:textSize="15sp"

                    android:layout_margin="5dp"
                    style="@style/Namaj_Niom_layout_Size_XXXhdpi"
                    android:background="@drawable/quran_button"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/Vibinno_shobdo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:gravity="center"
                    android:text="শরীয়তের শব্দার্থ"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/idTaharat"
                android:layout_margin="10dp"

                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    style="@style/Namaj_Niom_layout_Size_XXXhdpi"
                    android:background="@drawable/quran_button"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/Taharat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="তাহারাত\n(পবিত্রতা)"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/idRojar_somoy_suchi"
                android:layout_weight="1"

                android:layout_margin="10dp"

                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    style="@style/Namaj_Niom_layout_Size_XXXhdpi"
                    android:background="@drawable/quran_button"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/Rojar_somoy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:gravity="center"
                    android:text="রোজার সময় সূচী"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/idGoLocation"
                android:layout_margin="10dp"

                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    style="@style/Namaj_Niom_layout_Size_XXXhdpi"
                    android:background="@drawable/quran_button"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/Location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:gravity="center"
                    android:text="স্থান নির্বাচন করুন"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </LinearLayout>






    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded"
        android:orientation="vertical"
        android:padding="8dp" />
</RelativeLayout>

