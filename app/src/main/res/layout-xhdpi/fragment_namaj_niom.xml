<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quran_mazid_bg">

    <ImageView
        android:id="@+id/idInformation"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_baseline_info_24"
        android:layout_width="50dp"
        android:layout_height="50dp"/>


    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        >

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/idNamajerNiom"
                android:layout_margin="10dp"

                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout


                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    style="@style/Namaj_Niom_layout_Size_Xhdpi"
                    android:background="@drawable/quran_button"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/Namaj_niom_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </LinearLayout>

                </LinearLayout>



                <TextView
                    android:text="@string/namajer_niom"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/idDoaoDurud"
                android:layout_margin="10dp"

                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:textSize="16sp"

                    android:layout_margin="5dp"

                    style="@style/Namaj_Niom_layout_Size_Xhdpi"

                    android:background="@drawable/quran_button"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/Doa_durud"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:text="@string/doa_durud"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/idBiseshNamaj"
                android:layout_margin="10dp"

                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:textSize="16sp"

                    android:layout_margin="5dp"
                    style="@style/Namaj_Niom_layout_Size_Xhdpi"
                    android:background="@drawable/quran_button"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/Bishesh_namaj"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:text="@string/bisesh_namaj"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/idForojOSunnot"
                android:layout_margin="10dp"

                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:textSize="16sp"

                    android:layout_margin="5dp"
                    style="@style/Namaj_Niom_layout_Size_Xhdpi"
                    android:background="@drawable/quran_button"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/Namajer_parthokko"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:gravity="center"
                    android:text="@string/namajer_parthokko"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/idMonajaterNiom"
                android:layout_margin="10dp"

                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:textSize="16sp"

                    android:layout_margin="5dp"
                    style="@style/Namaj_Niom_layout_Size_Xhdpi"
                    android:background="@drawable/quran_button"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/Monajat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/amol"
                    android:textSize="11sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/idShoriot"
                android:layout_margin="10dp"


                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:textSize="15sp"

                    android:layout_margin="5dp"
                    style="@style/Namaj_Niom_layout_Size_Xhdpi"
                    android:background="@drawable/quran_button"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/Vibinno_shobdo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:gravity="center"
                    android:text="@string/shoriot_shobdartho"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/idTaharat"
                android:layout_margin="10dp"

                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    style="@style/Namaj_Niom_layout_Size_Xhdpi"
                    android:background="@drawable/quran_button"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/Taharat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/taharat"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/idRojar_somoy_suchi"
                android:layout_weight="1"

                android:layout_margin="10dp"

                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    style="@style/Namaj_Niom_layout_Size_Xhdpi"
                    android:background="@drawable/quran_button"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/Rojar_somoy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/roajr_somoysuchi"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/idGoLocation"
                android:layout_margin="10dp"

                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    style="@style/Namaj_Niom_layout_Size_Xhdpi"
                    android:background="@drawable/quran_button"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/Location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:gravity="center"
                    android:text="@string/locationText"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </LinearLayout>







    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded"
        android:orientation="vertical"
        android:padding="8dp" />
</RelativeLayout>

